<Window x:Class="KursRabotaBD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KursRabotaBD"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="500" ResizeMode="CanMinimize">
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom" >
            <Button  x:Name="updateButton" Height="40" Content="0" Width="250" Click="updateButton_Click" />
            <Button  x:Name="deleteButton" Height="40" Content="2" Width="250" Click="deleteButton_Click" />
        </DockPanel>

        <DataGrid x:FieldModifier="public"  x:Name="dtGrid" d:ItemsSource="{d:Binding}" />
    </DockPanel>
    
</Window>
